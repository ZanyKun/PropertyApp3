pipeline {
	agent any
	
	tools {
		// Install the Maven version configured as "maven" and add it to the path.
		maven "maven"
		jdk "java"
		
	}
		
	stages {
		stage('Clean'){
			steps{
				sh 'mvn clean'   
			}	
		}
		stage("Github code"){
			steps{
			    // Get some code from a GitHub repository
				git 'https://github.com/ZanyKun/PropertyApp3.git'
			}
		}
		stage('Sonar Cloud Check'){
		 	steps{
          		sh 'verify sonar:sonar -Dsonar.host.url=https://sonarcloud.io -Dsonar.organization=zanykun -Dsonar.projectKey=99AcresFinal:99AcresFinal -Dsonar.login=2d70256a2a501375af9589bd1ec4ddf73117e467'
      	}              
		}
		stage('Build') {
			steps {
				// Run Maven on a Unix agent.
				//sh "mvn -Dmaven.test.failure.ignore=true package"
				sh 'mvn build -DskipTests=true'
				
				// To run Maven on a Windows agent, use
				// bat "mvn -Dmaven.test.failure.ignore=true package"
				}
				
				post {
				// If Maven was able to run the tests, even if some of the test
				// failed, record the test results and archive the jar file.
				success {
				junit '**/target/surefire-reports/TEST-*.xml'
				archiveArtifacts 'target/*.war'
				}
			}
		}
	}
}